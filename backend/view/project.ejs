      Create New Issue
    </button>
    
    <% if ((issues.length === 0) || (!issues)) { %>
      <p>No Issues found.</p>
    <% } else { %>
      <ul class="list-group">
        <% issues.forEach(issue => { %>
          <li class="issue-item">
            <div class="list-group-item" data-issue-id="<%= issue._id %>">
              <desc><%= issue.timestamp %></desc>
              <p><%= issue.title %></p>
              <desc>by <b><%= issue.author %></b></desc>
              <issue-status>status : <b><%= issue.status %></b></issue-status>          
            </div>
